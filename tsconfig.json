{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "removeComments": true,
        "moduleResolution": "node",
        "noLib": false,
        "preserveConstEnums": true,
        "declaration": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist/",
        "experimentalDecorators": true
    },
    "filesGlob": [
        "index.ts",
        "./lib/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "exclude": [
        "./dist"
    ]
}
